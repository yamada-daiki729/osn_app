<div class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-96">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">ログイン</h2>

    <%# フラッシュメッセージ %>
    <% if flash[:alert] %>
      <div class="bg-red-100 text-red-700 p-4 rounded-md mb-4 text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :login_id, "ログインID", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :login_id,
            autofocus: true,
            placeholder: "your-id",
            class: "mt-1 w-full px-4 py-2 border #{resource.errors.include?(:login_id) ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password,
            autocomplete: "current-password",
            placeholder: "••••••••",
            class: "mt-1 w-full px-4 py-2 border #{resource.errors.include?(:password) ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "w-full bg-sky-500 text-white py-2 px-4 rounded-md shadow hover:bg-sky-600" %>
      </div>
    <% end %>
  </div>
</div>